<h1><%= @question.title %><% if @question.resolved
    resolved = " resolved" else
    resolved = ""
end %><span style="color: rgba(0,0,0,0.2)"><%= resolved %></span></h1>
<div class="row">
    <div class="col-md-8"><p><%= @question.body %></p></div>
    <div class="col-md-4"><%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %><%= link_to "Delete Question", @question, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete ' + @question.title + '?'} %></div>
</div>
